<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardBackgroundColor="#EDE4EF"
    app:cardCornerRadius="7dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo_mb_chuyenbay"
            android:layout_width="100dp"
            android:paddingStart="10dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_vietjet" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="7dp">

                <TextView
                    android:id="@+id/tv_macb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã chuyến bay: BB7947"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="7dp">

                <TextView
                    android:id="@+id/tv_from_it1_cb_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From: Đà Nẵng"
                    android:textColor="@color/black"
                    android:textSize="11dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/img_from_to" />

                <TextView
                    android:id="@+id/tv_to_it1_cb_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="To: TP. Hồ Chí Minh"
                    android:textColor="@color/black"
                    android:textSize="11dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="7dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giờ bay:   "
                        android:textColor="@color/black"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/tv_timebay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17:00 17/11/2022"
                        android:textColor="#0D2781"
                        android:textSize="10dp" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="40dp"
                        android:src="@drawable/img_oclock" />

                    <TextView
                        android:id="@+id/tv_tongtime_cb_admin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="13dp"
                        android:text="1h 30m"
                        android:textColor="@color/black"
                        android:textSize="10dp" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>