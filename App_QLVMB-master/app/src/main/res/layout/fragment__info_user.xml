<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_bgr_info"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar_user"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/img_avatar" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/btn_camera_info_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="49dp"
            android:layout_marginTop="-40dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/i1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/bgr_gray" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_camera_alt_24"
                app:layout_anchor="@id/i1"
                app:layout_anchorGravity="center" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <EditText
            android:id="@+id/edt_name_user"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:hint="Nguyễn Văn An"
            android:textSize="17dp"
            android:paddingStart="10dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext" />


        <ImageView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/anh4" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_edittext"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_dateofbirth"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:drawableStart="@drawable/ic_baseline_calendar_month_24"
                android:gravity="center|left"
                android:drawablePadding="7dp"
                android:padding="10dp"
                android:text="Ngày sinh"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/edt_date_user"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:hint="12/12/2000"
                android:textSize="14dp"
                android:paddingStart="10dp"
                android:gravity="right|center"
                android:paddingRight="20dp"
                android:background="@drawable/custom_edittext" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_edittext"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:drawableStart="@drawable/ic_cccd"
                android:drawablePadding="7dp"
                android:gravity="center|left"
                android:padding="10dp"
                android:text="Số CCCD"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/edt_cccd_user"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:hint="0344438473473"
                android:textSize="14dp"
                android:paddingStart="10dp"
                android:gravity="right|center"
                android:paddingRight="20dp"
                android:background="@drawable/custom_edittext" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:drawablePadding="7dp"
                android:gravity="center|left"
                android:padding="10dp"
                android:text="Email"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/edt_email_user"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:hint="canhpnph@fpt.edu.vn"
                android:editable="false"
                android:textSize="14dp"
                android:paddingStart="10dp"
                android:gravity="right|center"
                android:paddingRight="20dp"
                android:background="@drawable/custom_edittext" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="7dp"
                android:gravity="center|left"
                android:padding="10dp"
                android:text="Số điện thoại"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/edt_sdt_user"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:textSize="14dp"
                android:paddingStart="10dp"
                android:hint="0986643743"
                android:gravity="right|center"
                android:paddingRight="20dp"
                android:background="@drawable/custom_edittext" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:drawableStart="@drawable/ic_sex"
                android:drawablePadding="7dp"
                android:gravity="center|left"
                android:padding="10dp"
                android:text="Giới tính"
                android:textSize="13dp" />

            <Spinner
                android:paddingLeft="45dp"
                android:id="@+id/spin_sex_user"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center|right"
                android:layout_marginRight="5dp"
                android:background="@drawable/custom_spinner1"
                android:gravity="right" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_edittext"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="7dp"
                android:gravity="center|left"
                android:padding="10dp"
                android:text="Địa chỉ"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/edt_diachi_user"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:textSize="14dp"
                android:paddingStart="10dp"
                android:hint="Nam Từ Liêm, Hà Nội"
                android:gravity="right|center"
                android:paddingRight="20dp"
                android:background="@drawable/custom_edittext" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:drawableStart="@drawable/ic_baseline_map_24"
                android:drawablePadding="7dp"
                android:gravity="center|left"
                android:padding="10dp"
                android:text="Quốc tịch"
                android:textSize="13dp" />

            <Spinner
                android:paddingStart="45dp"
                android:id="@+id/spin_quoctich_user"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:background="@drawable/custom_spinner1" />

        </LinearLayout>

        <Button
            android:id="@+id/btnSave_Info_in_User"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            android:text="Lưu"
            android:textColor="#FFFFFF"
            app:backgroundTint="@null"/>
    </LinearLayout>

</ScrollView>