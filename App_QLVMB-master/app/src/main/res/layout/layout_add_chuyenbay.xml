<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_bgr"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="7dp"
                android:text="Hãng máy bay:"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <Spinner
                android:id="@+id/spin_hmb_in_dialog_themchuyenbay"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/custom_spinner1"
                android:paddingLeft="10dp"
                android:gravity="right" />
        </LinearLayout>

        <EditText
            android:layout_marginLeft="10dp"
            android:id="@+id/edt_macb_in_dialog_themchuyenbay"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:background="@drawable/custom_edittext"
            android:drawableStart="@drawable/ic_baseline_airplanemode_active_24"
            android:drawablePadding="5dp"
            android:hint="Mã chuyến bay"
            android:paddingStart="10dp"
            android:textSize="13dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_timebay_in_dialog_themchuyenbay"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_edittext"
            android:drawableStart="@drawable/ic_baseline_access_time_24"
            android:drawablePadding="5dp"
            android:hint="Thời gian cất cánh"
            android:paddingStart="10dp"
            android:textSize="13dp" />

        <EditText
            android:layout_marginLeft="20dp"
            android:id="@+id/edt_tongtime_in_dialog_themchuyenbay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/custom_edittext"
            android:drawableStart="@drawable/ic_baseline_access_time_24"
            android:drawablePadding="5dp"
            android:hint="Tổng thời gian bay"
            android:paddingStart="10dp"
            android:textSize="13dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="7dp"
                android:text="Điểm đi:"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <Spinner
                android:id="@+id/spin_from_in_dialog_themchuyenbay"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/custom_spinner1"
                android:gravity="right"
                android:paddingLeft="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="7dp"
                android:text="Điểm đến:"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <Spinner
                android:id="@+id/spin_to_in_dialog_themchuyenbay"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/custom_spinner1"
                android:gravity="right"
                android:paddingLeft="20dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_giave_in_dialog_themchuyenbay"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_edittext"
            android:drawableStart="@drawable/ic_dollar"
            android:drawablePadding="5dp"
            android:hint="Giá vé"
            android:paddingStart="10dp"
            android:textSize="13dp" />

        <EditText
            android:layout_marginLeft="20dp"
            android:id="@+id/edt_slve_in_dialog_themchuyenbay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/custom_edittext"
            android:drawableStart="@drawable/ic_number"
            android:drawablePadding="5dp"
            android:hint="Số lượng vé"
            android:paddingStart="10dp"
            android:textSize="13dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btn_cancel_in_dialog_themchuyenbay"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Huỷ"
            android:textAllCaps="false"
            android:background="@drawable/button" />

        <Button
            android:id="@+id/btn_add_in_dialog_themchuyenbay"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Thêm"
            android:layout_marginLeft="60dp"
            android:textAllCaps="false"
            android:background="@drawable/button" />
    </LinearLayout>
</LinearLayout>